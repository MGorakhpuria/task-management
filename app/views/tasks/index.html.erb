<div class="container">

<h1>Listing tasks</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th scope="col">Status</th>
    <th scope="col">Due Date</th>
  </tr>
  </thead>

<% @tasks.each do |task| %>
    <tbody>

  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.due_date %></td>
    <td><%= link_to 'Show', [task], class: "btn btn-sm btn-primary" %></td>
    <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-sm btn-primary" %></td>
    <td><%= button_to 'Delete', task, method: :delete, form:{ data: { turbo_confirm: 'Are you sure?' }} , class: "btn btn-sm btn-primary"%></td>
  </tr>
    </tbody>

<% end %>

</table>
<%= will_paginate @tasks,  :page_links => false %>
<br />

<%= link_to 'New Task', new_task_path, class: "btn btn-sm btn-primary" %>
</div>
