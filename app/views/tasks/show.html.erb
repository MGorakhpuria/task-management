<div class="container">

  <p id="notice"><%= notice %></p>

  <p>
    <b>Name:</b>
    <%= @task.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @task.description %>
  </p>

  <p>
    <b>Status:</b>
    <%= @task.status %>
  </p>

  <p>
    <b>Project:</b>
    <%= @task.due_date %>
  </p>


  <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-sm btn-primary" %> |
  <%= link_to 'Back', tasks_path(@task), class: "btn btn-sm btn-primary" %>
</div>
